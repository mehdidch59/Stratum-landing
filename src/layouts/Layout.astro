---
interface Props {
	title: string;
}

import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Stratum - Secure your Infrastructure at the Speed of Code." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-slate-950 text-slate-300 font-sans antialiased selection:bg-cyan-500/30 selection:text-cyan-200 overflow-x-hidden">
		<slot />
	</body>
</html>

<style is:global>
	/* Custom Scrollbar */
	::-webkit-scrollbar {
		width: 10px;
	}
	::-webkit-scrollbar-track {
		background: #0f172a; 
	}
	::-webkit-scrollbar-thumb {
		background: #334155; 
		border-radius: 5px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #475569; 
	}
</style>
