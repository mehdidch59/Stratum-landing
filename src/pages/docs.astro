---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Stratum - Documentation">
    <Navbar />
    <main class="pt-32 max-w-7xl mx-auto px-6 min-h-screen">
        <div class="mb-12">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">Documentation</h1>
            <p class="text-slate-400 text-lg">
                Everything you need to integrate Stratum into your workflow.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            {/* Sidebar */}
            <aside class="space-y-6">
                <div>
                    <h3 class="font-bold text-white mb-3">Getting Started</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li>
                            <a
                                href="#"
                                class="hover:text-cyan-400 transition-colors"
                                >Introduction</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-cyan-400 transition-colors"
                                >Installation</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-cyan-400 transition-colors"
                                >Quick Start</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-cyan-400 transition-colors"
                                >Architecture</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold text-white mb-3">Core Concepts</h3>
                    <ul class="space-y-2 text-slate-400 text-sm">
                        <li>
                            <a
                                href="#"
                                class="hover:text-cyan-400 transition-colors"
                                >Scanners</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-cyan-400 transition-colors"
                                >Policies</a>
                        </li>
                        <li>
                            <a
                                href="#"
                                class="hover:text-cyan-400 transition-colors"
                                >Reporting</a>
                        </li>
                    </ul>
                </div>
            </aside>

            {/* Content */}
            <div
                class="md:col-span-3 prose prose-invert prose-slate max-w-none"
            >
                <div
                    class="bg-slate-900/50 border border-white/10 rounded-xl p-8"
                >
                    <h2 class="text-2xl font-bold text-white mb-4">
                        Quick Start
                    </h2>
                    <p class="text-slate-400 mb-6">
                        Stratum CLI is the easiest way to get started. Run scans
                        directly from your terminal.
                    </p>

                    <div
                        class="bg-[#020617] rounded-lg p-4 font-mono text-sm border border-white/10 mb-6"
                    >
                        <div
                            class="flex items-center gap-2 mb-2 text-slate-500 border-b border-white/5 pb-2"
                        >
                            <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                            <div class="w-2 h-2 bg-yellow-500 rounded-full">
                            </div>
                            <div class="w-2 h-2 bg-green-500 rounded-full">
                            </div>
                            <span class="ml-2">bash</span>
                        </div>
                        <div>
                            <span class="text-cyan-400">$</span> npm install -g @stratum/cli<br
                            />
                            <span class="text-cyan-400">$</span> stratum init
                        </div>
                    </div>

                    <p class="text-slate-400">
                        Once initialized, you can run your first scan against
                        any target:
                    </p>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
