---

<nav
    class="fixed top-0 w-full z-50 backdrop-blur-md border-b border-white/10 bg-slate-950/60"
>
    <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
        <!-- Logo -->
        <a
            href="/"
            class="text-xl font-bold bg-linear-to-r from-white to-slate-400 bg-clip-text text-transparent"
        >
            Stratum
        </a>

        <!-- Desktop Links -->
        <div
            class="hidden md:flex space-x-8 text-sm font-medium text-slate-400"
        >
            <a href="/#features" class="hover:text-white transition-colors"
                >Features</a
            >
            <a href="/pricing" class="hover:text-white transition-colors"
                >Pricing</a
            >
            <a href="/docs" class="hover:text-white transition-colors">Docs</a>
        </div>

        <!-- Desktop CTAs -->
        <div class="hidden md:flex items-center space-x-4">
            <a
                href="https://console.stratum-app.com"
                class="text-slate-300 hover:text-white text-sm font-medium transition-colors"
            >
                Launch App
            </a>
            <a
                href="/pricing"
                class="px-4 py-2 bg-cyan-500 hover:bg-cyan-400 text-slate-950 text-sm font-bold font-heading tracking-wide rounded-full transition-all shadow-[0_0_15px_rgba(6,182,212,0.5)] hover:shadow-[0_0_25px_rgba(6,182,212,0.6)]"
            >
                Get Started
            </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
            id="mobile-menu-btn"
            class="md:hidden text-slate-300 hover:text-white focus:outline-none"
        >
            <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile Menu Overlay -->
    <div
        id="mobile-menu"
        class="md:hidden hidden bg-slate-950 border-b border-white/10"
    >
        <div class="px-6 py-4 space-y-4 flex flex-col">
            <a
                href="/#features"
                class="text-slate-400 hover:text-white text-sm font-medium transition-colors"
                >Features</a
            >
            <a
                href="/pricing"
                class="text-slate-400 hover:text-white text-sm font-medium transition-colors"
                >Pricing</a
            >
            <a
                href="/docs"
                class="text-slate-400 hover:text-white text-sm font-medium transition-colors"
                >Docs</a
            >
            <hr class="border-white/10" />
            <a
                href="https://console.stratum-app.com"
                class="text-slate-300 hover:text-white text-sm font-medium transition-colors"
            >
                Launch App
            </a>
            <a
                href="/pricing"
                class="text-center px-4 py-2 bg-cyan-500 hover:bg-cyan-400 text-slate-950 text-sm font-bold font-heading tracking-wide rounded-full transition-all shadow-[0_0_15px_rgba(6,182,212,0.5)] hover:shadow-[0_0_25px_rgba(6,182,212,0.6)]"
            >
                Get Started
            </a>
        </div>
    </div>
</nav>

<script>
    const btn = document.getElementById("mobile-menu-btn");
    const menu = document.getElementById("mobile-menu");

    if (btn && menu) {
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });
    }
</script>
