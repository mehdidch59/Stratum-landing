<section id="pricing" class="py-24 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-3xl md:text-5xl font-bold text-center mb-16">Simple Pricing</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
             {/* Hobby */}
             <div class="bg-slate-900/50 border border-white/10 rounded-2xl p-8 hover:border-white/20 transition-colors flex flex-col">
                <h3 class="text-lg font-medium text-slate-400 mb-2">Hobby</h3>
                <div class="text-4xl font-bold text-white mb-6">$0<span class="text-lg text-slate-500 font-normal">/mo</span></div>
                <ul class="space-y-4 mb-8 text-slate-300 flex-1">
                    <li class="flex items-center"><svg class="w-5 h-5 text-slate-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> 5 Scans / month</li>
                    <li class="flex items-center"><svg class="w-5 h-5 text-slate-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Community Support</li>
                </ul>
                <button class="w-full py-3 rounded-lg border border-white/10 hover:bg-white/5 transition-colors font-medium cursor-pointer">Start Free</button>
             </div>
             
             {/* Pro (Glow) */}
             <div class="bg-slate-900/50 border border-cyan-500/50 rounded-2xl p-8 relative hover:-translate-y-1 transition-transform duration-300 shadow-[0_0_30px_rgba(6,182,212,0.15)] flex flex-col">
                <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-full text-xs font-bold text-white uppercase tracking-wider">Most Popular</div>
                <h3 class="text-lg font-medium text-cyan-400 mb-2">Pro</h3>
                <div class="text-4xl font-bold text-white mb-6">$29<span class="text-lg text-slate-500 font-normal">/mo</span></div>
                <ul class="space-y-4 mb-8 text-slate-300 flex-1">
                    <li class="flex items-center"><svg class="w-5 h-5 text-cyan-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Unlimited Scans</li>
                    <li class="flex items-center"><svg class="w-5 h-5 text-cyan-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> API Access</li>
                    <li class="flex items-center"><svg class="w-5 h-5 text-cyan-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Priority Support</li>
                </ul>
                <button class="w-full py-3 rounded-lg bg-cyan-500 hover:bg-cyan-400 text-slate-950 font-bold transition-colors shadow-lg shadow-cyan-500/20 cursor-pointer">Get Started</button>
             </div>
             
             {/* Enterprise */}
             <div class="bg-slate-900/50 border border-white/10 rounded-2xl p-8 hover:border-white/20 transition-colors flex flex-col">
                <h3 class="text-lg font-medium text-slate-400 mb-2">Enterprise</h3>
                <div class="text-4xl font-bold text-white mb-6">Custom</div>
                <ul class="space-y-4 mb-8 text-slate-300 flex-1">
                    <li class="flex items-center"><svg class="w-5 h-5 text-slate-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Single Sign-On (SSO)</li>
                    <li class="flex items-center"><svg class="w-5 h-5 text-slate-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Custom Deployment</li>
                </ul>
                <button class="w-full py-3 rounded-lg border border-white/10 hover:bg-white/5 transition-colors font-medium cursor-pointer">Contact Sales</button>
             </div>
        </div>
    </div>
</section>
