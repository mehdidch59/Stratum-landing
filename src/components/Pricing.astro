<section id="pricing" class="py-24 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-3xl md:text-5xl font-bold text-center mb-16">
            Scale your Security
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {/* Hobby */}
            <div
                class="bg-slate-900/50 border border-white/10 rounded-2xl p-6 hover:border-white/20 transition-colors flex flex-col"
            >
                <h3 class="text-lg font-medium text-slate-400 mb-2">Hobby</h3>
                <div class="text-3xl font-bold text-white mb-6">
                    €0<span class="text-base text-slate-500 font-normal"
                        >/mo</span
                    >
                </div>
                <ul class="space-y-3 mb-8 text-sm text-slate-300 flex-1">
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-slate-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        5 Scans / month
                    </li>
                    <li class="flex items-center gap-2 text-slate-500">
                        <svg
                            class="w-4 h-4 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        Single User
                    </li>
                    <li class="flex items-center gap-2 text-slate-500">
                        <svg
                            class="w-4 h-4 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        Community Support
                    </li>
                </ul>
                <button
                    class="w-full py-2.5 rounded-lg border border-white/10 hover:bg-white/5 transition-colors text-sm font-medium cursor-pointer"
                >
                    Start Free
                </button>
            </div>

            {/* Pro */}
            <div
                class="bg-slate-900/50 border border-white/10 rounded-2xl p-6 hover:border-white/20 transition-colors flex flex-col"
            >
                <h3 class="text-lg font-medium text-slate-400 mb-2">Pro</h3>
                <div class="text-3xl font-bold text-white mb-6">
                    €29<span class="text-base text-slate-500 font-normal"
                        >/mo</span
                    >
                </div>
                <ul class="space-y-3 mb-8 text-sm text-slate-300 flex-1">
                    <li class="flex items-center gap-2 font-medium text-white">
                        <svg
                            class="w-4 h-4 text-cyan-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        Unlimited Scans
                    </li>
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-slate-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        1 User Account
                    </li>
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-slate-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        Standard Support
                    </li>
                </ul>
                <button
                    class="w-full py-2.5 rounded-lg border border-white/10 hover:bg-white/5 transition-colors text-sm font-medium cursor-pointer"
                >
                    Upgrade to Pro
                </button>
            </div>

            {/* Team */}
            <div
                class="bg-slate-900/50 border border-cyan-500/50 rounded-2xl p-6 relative hover:-translate-y-1 transition-transform duration-300 shadow-[0_0_30px_rgba(6,182,212,0.15)] flex flex-col"
            >
                <div
                    class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-linear-to-r from-cyan-500 to-blue-500 rounded-full text-[10px] font-bold text-white uppercase tracking-wider"
                >
                    Most Popular
                </div>
                <h3 class="text-lg font-medium text-cyan-400 mb-2">Team</h3>
                <div class="text-3xl font-bold text-white mb-6">
                    €99<span class="text-base text-slate-500 font-normal"
                        >/mo</span
                    >
                </div>
                <ul class="space-y-3 mb-8 text-sm text-slate-300 flex-1">
                    <li class="flex items-center gap-2 font-medium text-white">
                        <svg
                            class="w-4 h-4 text-cyan-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        Up to 10 Members
                    </li>
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-cyan-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        RBAC & Teams
                    </li>
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-slate-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        Shared Report History
                    </li>
                </ul>
                <button
                    class="w-full py-2.5 rounded-lg bg-cyan-500 hover:bg-cyan-400 text-slate-950 text-sm font-bold transition-colors shadow-lg shadow-cyan-500/20 cursor-pointer"
                >
                    Start Team Trial
                </button>
            </div>

            {/* Business */}
            <div
                class="bg-slate-900/50 border border-white/10 rounded-2xl p-6 hover:border-white/20 transition-colors flex flex-col"
            >
                <h3 class="text-lg font-medium text-slate-400 mb-2">
                    Business
                </h3>
                <div class="text-3xl font-bold text-white mb-6">
                    €199<span class="text-base text-slate-500 font-normal"
                        >/mo</span
                    >
                </div>
                <ul class="space-y-3 mb-8 text-sm text-slate-300 flex-1">
                    <li class="flex items-center gap-2 font-medium text-white">
                        <svg
                            class="w-4 h-4 text-slate-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        Up to 25 Members
                    </li>
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-slate-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        API Power Access
                    </li>
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-slate-500 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        Priority 24/7 Support
                    </li>
                    <li
                        class="flex items-center gap-2 text-indigo-400 font-mono text-[10px] uppercase tracking-wider"
                    >
                        <svg
                            class="w-4 h-4 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path></svg
                        >
                        SSO & SAML Auth
                    </li>
                </ul>
                <button
                    class="w-full py-2.5 rounded-lg border border-white/10 hover:bg-white/5 transition-colors text-sm font-medium cursor-pointer"
                >
                    Contact Sales
                </button>
            </div>
        </div>
    </div>
</section>
